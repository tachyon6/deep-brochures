[Unit]
Description=Media Kit Search API
After=network.target

[Service]
Type=exec
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/deep-brochures
Environment=PATH=/home/ubuntu/deep-brochures/venv/bin
ExecStart=/home/ubuntu/deep-brochures/venv/bin/gunicorn main:app -c gunicorn.conf.py
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 